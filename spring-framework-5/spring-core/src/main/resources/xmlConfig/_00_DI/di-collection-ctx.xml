<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util https://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="collectionOfThings" class="xmlConfig._00_DI.collections.CollectionOfThings">
        <property name="names">
            <list>
                <value>Joe</value>
                <value>Kamala</value>
            </list>
        </property>
    </bean>

    <!-- ################################################### -->
    <bean id="collectionOfThingsWithPNamespace" class="xmlConfig._00_DI.collections.CollectionOfThings"
          p:names-ref="listOfNames"/>

    <util:list id="listOfNames">
        <value>Joe</value>
        <value>Kamala</value>
    </util:list>
    <util:list id="listOfNames2" list-class="java.util.LinkedList">
        <value>Joe</value>
        <value>Kamala</value>
    </util:list>
</beans>