<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="customerAutowiredByName" class="xmlConfig._00_dependency_injection.autowiring.Customer"
          autowire="byName"/>

    <bean id="customerAutowiredByType" class="xmlConfig._00_dependency_injection.autowiring.Customer"
          autowire="byType"/>

    <bean id="customerAutowiredByCons" class="xmlConfig._00_dependency_injection.autowiring.Customer"
          autowire="constructor"/>

    <!-- ############################## -->

    <bean id="person" class="xmlConfig._00_dependency_injection.autowiring.Person"
          p:firstName="Kamal"
          p:lastName="Harris"/>

    <!--Tagging with (autowire-candidate="false") so we're left with unique beans for wiring-->
    <bean id="person2" class="xmlConfig._00_dependency_injection.autowiring.Person"
          autowire-candidate="false"
          p:firstName="Kamal"
          p:lastName="Harris"/>


</beans>