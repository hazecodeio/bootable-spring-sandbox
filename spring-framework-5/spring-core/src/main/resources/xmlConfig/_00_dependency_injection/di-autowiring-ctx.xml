<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="customerAutowiredByName" class="xmlConfig._00_dependency_injection.autowiring.Customer" autowire="byName"/>
    <bean id="person" class="xmlConfig._00_dependency_injection.autowiring.Person"
          p:firstName="Kamal"
          p:lastName="Harris"/>

    <bean id="customerAutowiredByType" class="xmlConfig._00_dependency_injection.autowiring.Customer" autowire="byType"/>

</beans>